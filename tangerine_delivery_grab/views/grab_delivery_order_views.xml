<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="grab_delivery_order_form_view" model="ir.ui.view">
        <field name="name">grab.delivery.order.form.view</field>
        <field name="model">grab.delivery.order</field>
        <field name="arch" type="xml">
            <form create="0" edit="0" delete="0">
                <sheet>
                    <label for="delivery_id"/>
                    <h1>
                        <field name="delivery_id"/>
                    </h1>
                    <group>
                        <group>
                            <field name="picking_id"/>
                            <field name="shipping_cost"/>
                            <field name="status_id"/>
                            <field name="service_type"/>
                            <field name="vehicle_type"/>
                            <field name="payment_method"/>
                            <field name="cod_type"/>
                        </group>
                        <group>
                            <field name="payer"/>
                            <field name="cod_amount"/>
                            <field name="promo_code"/>
                            <field name="schedule_pickup_time_from"/>
                            <field name="schedule_pickup_time_to"/>
                            <field name="high_value"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Driver">
                            <group>
                                <group>
                                    <field name="driver_name"/>
                                    <field name="driver_license_plate"/>
                                    <field name="driver_phone" widget="phone"/>
                                </group>
                                <group>
                                    <field name="driver_photo_url" widget="url"/>
                                    <field name="driver_current_lat"/>
                                    <field name="driver_current_lng"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="grab_delivery_order_tree_view" model="ir.ui.view">
        <field name="name">grab.delivery.order.tree.view</field>
        <field name="model">grab.delivery.order</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="picking_id"/>
                <field name="delivery_id"/>
                <field name="service_type"/>
                <field name="payment_method"/>
                <field name="payer"/>
                <field name="shipping_cost"/>
                <field name="status_id"/>
            </tree>
        </field>
    </record>

    <record id="grab_delivery_order_search_view" model="ir.ui.view">
        <field name="name">grab.delivery.order.search.view</field>
        <field name="model">grab.delivery.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="picking_id"/>
                <field name="delivery_id"/>
           </search>
        </field>
    </record>

    <record id="grab_delivery_order_action" model="ir.actions.act_window">
        <field name="name">Delivery Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">grab.delivery.order</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('grab_delivery_order_tree_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('grab_delivery_order_form_view')})]"
        />
        <field name="search_view_id" ref="grab_delivery_order_search_view"/>
    </record>
</odoo>
