<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="multi_add_shipping_wizard_form_view" model="ir.ui.view">
        <field name="name">multi.add.shipping.wizard.form.view</field>
        <field name="model">multi.add.shipping.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="carrier_id"/>
                        <field name="origin_address_id"/>
                    </group>
                </group>
                <notebook>
                    <page string="Sale Orders">
                        <field name="detail_ids">
                            <tree editable="bottom" create="0">
                                <field name="sale_id" options="{'no_create_edit': True, 'no_open': True}"/>
                                <field name="date_order"/>
                                <field name="partner_id"/>
                                <field name="estimate_cost"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button string="Get Gate"
                            type="object"
                            name="action_get_multi_stop_delivery_quotes"
                            class="btn btn-primary"
                    />
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="multi_add_shipping_wizard_action" model="ir.actions.act_window">
        <field name="name">Grab Add Multi Shipping</field>
        <field name="res_model">multi.add.shipping.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>